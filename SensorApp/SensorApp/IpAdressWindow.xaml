<Window x:Class="SensorApp.IpAdressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SensorApp"
        mc:Ignorable="d"
        Title="IpAdressWindow" Height="150" Width="250">
    <Grid Background="LightGray">


        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Content="IP Adresse:" VerticalAlignment="Center"></Label>
        <TextBox Grid.Row="1" Margin="0"></TextBox>

        <Button Grid.Row="1" Margin="15">Speichern</Button>
        <Button Grid.Row="1" Grid.Column="1" Margin="15">Abbrechen</Button>
    </Grid>
</Window>
